<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CompanyName">
        <item name="android:background">#33FFA000</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#D9FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="CompanyInformation">
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CompanyOffer" parent="@style/CompanyInformation">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="CompanyContacts" parent="@style/CompanyInformation">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawablePadding">22dp</item>
    </style>


</resources>
